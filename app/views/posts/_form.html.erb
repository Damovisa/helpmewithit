<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :style => "width:30%" %>
  </div>
  <div class="field">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, :style => "width:30%" %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Post::POST_TYPES,{},:class =>"form-control",:style => "width:30%" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :style => "width:30%", rows:10 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
