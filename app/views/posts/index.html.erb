<p id="notice"><%= notice %></p>


<%= link_to 'Click here to post your free ad!', new_post_path, class:"btn btn-default btn-lg btn-block" %>

<h1>Recent Posts</h1>

<table class="table table-striped table-hover ">
<col width="20%">
  <col width="20%">
  <col width="60%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.created_at.to_date %></td>
      <td><%= post.category %></td>
      <td><%=post.title%></td>
    </tr>
    <% end%>
    
  </tbody>
</table> 

<br>


