<p id="notice"><%= notice %></p>


<%= link_to 'POST AN AD', new_post_path, class:"btn btn-post btn-lg btn-block" %>

<h1>Recent Posts</h1>

<table class="table table-striped table-hover ">
<col width="20%">
  <col width="20%">
  <col width="60%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= (post.created_at+12*60*60).strftime('%H:%M %a %d %b %Y') %></td>
      <td><%= post.category %></td>
      <td><%= link_to "#{post.title}", post_path(post.id) %></td>
    </tr>
    <% end%>
    
  </tbody>
</table> 

<br>


